<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="30dp"
    android:paddingVertical="20dp"
    tools:context=".ui.main.MainActivity">

    
    
    <ImageView
        android:id="@+id/iv_logo_without_name"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/border_image"
        android:contentDescription="@string/app_name"
        android:src="@drawable/jejaknesia_logo_only"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/welcome_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_name"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_logo_without_name"
            app:layout_constraintTop_toTopOf="@id/iv_logo_without_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/explore_beautiful_world"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/iv_logo_without_name"
        app:layout_constraintTop_toBottomOf="@id/welcome_name" />

    <TextView
        android:id="@+id/text_only"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_only"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
       android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_without_name"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/itinerary_planner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_radius_bg"
        android:padding="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_only">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/itinerary_planner"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/destination_edit_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            android:layout_marginTop="30dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_destination"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/departure_date_edit_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="30dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:startIconDrawable="@drawable/ic_baseline_date_range_24"
            app:endIconMode="custom">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_departure_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/departure_date"
                android:inputType="date" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/arrival_date_edit_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_baseline_date_range_24"
            app:endIconMode="custom"
            android:layout_marginTop="30dp" >


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_arrival_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/arrival_date"
                android:inputType="date" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/choose_pref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_your_preferences"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>